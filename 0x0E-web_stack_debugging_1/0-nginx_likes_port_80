#!/usr/bin/env bash
# Check if Nginx is installed

if ! command -v nginx &> /dev/null
then
    echo "Nginx is not installed. Installing now..."
    sudo apt-get update
    sudo apt-get install nginx -y
fi

# Check if Nginx is running
if systemctl is-active --quiet nginx
then
    echo "Nginx is running"
else
    echo "Nginx is not running. Starting now..."
    sudo systemctl start nginx
fi

# Check if Nginx is listening on port 80
if sudo netstat -plntu | grep :80 | grep nginx &> /dev/null
then
    echo "Nginx is listening on port 80"
else
    echo "Nginx is not listening on port 80. Updating configuration..."
    
    # Backup original config file
    sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak
    
    # Update config file to listen on port 80
    sudo sed -i 's/listen [0-9]*;/listen 80;/' /etc/nginx/sites-available/default
    
    # Test configuration and restart Nginx if successful
    sudo nginx -t && sudo systemctl restart nginx
fi

echo "Nginx setup complete."

